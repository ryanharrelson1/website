{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/npm",
      "args": ["install"]
    },
    {
      "name": "gcr.io/cloud-builders/npm",
      "args": ["run", "build"]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": ["build", "-t", "gcr.io/$golden-veld-419205/your-image-name", "."]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "run",
        "deploy",
        "your-service-name",
        "--image",
        "gcr.io/$golden-veld-419205/your-image-name",
        "--platform",
        "managed",
        "--region",
        "your-region"
      ]
    }
  ]
}
